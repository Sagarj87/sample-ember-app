<table id="companies">
    <tr>
        <th>Company Name</th>
        <th>Headquarters</th>
        <th>Revenue</th>
    </tr>
    {{#each model as |company index|}}
    <tr >
        <td>{{company.name}}</td>
        <td class="{{colorClass}}">{{company.headquarters}}</td>
        <td>{{company.revenue}}</td>
    </tr>
    {{/each}}
</table>
